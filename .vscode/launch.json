{
	"version": "0.2.0",
	"configurations": [
		{
			"name": "Python: unittest discover",
			"type": "python",
			"request": "launch",
			"module":"unittest",
			"args": ["discover", "tests/"],
			"cwd": "${workspaceFolder}",
			"env": {
				"PYTHONDONTWRITEBYTECODE": "1",
				"PYTHONPATH": "${workspaceFolder};${workspaceFolder}/vendor",
			},
			"console": "integratedTerminal",
			"justMyCode": true,
		},
		{
			"name": "Python: 現在のファイル",
			"type": "python",
			"request": "launch",
			"program": "${file}",
			"env": {
				"PYTHONDONTWRITEBYTECODE": "1",
				"PYTHONPATH": "${workspaceFolder};${workspaceFolder}/vendor",
			},
			"console": "integratedTerminal",
			"justMyCode": true
		},
	]
}